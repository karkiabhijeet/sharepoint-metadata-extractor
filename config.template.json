      "scopes": [
        "Sites.Read.All",
        "Files.Read.All",
        "InformationProtectionPolicy.Read.All"
      ]
    }
  },
  "siteFilters": {
    "includeSiteSearch": ["*"],
    "excludeSiteUrls": [],
    "sampleSiteSearches": {
      "allSites": ["*"],
      "specificDepartments": ["Finance*", "HR*", "Legal*"],
      "projectSites": ["Project*", "Team*"],
      "specificSites": ["Contoso Intranet", "Executive Team"]
    }
  },
  "libraryFilters": {
    "includeLibraries": [],
    "excludeLibraries": [
      "Form Templates",
