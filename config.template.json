      "Site Assets",
      "Site Pages",
      "Images",
      "Pages",
      "Settings",
      "Style Library",
      "AppPages",
      "Apps for SharePoint",
      "Apps for Office",
      "Site Collection Documents",
      "Site Collection Images",
      "Documents Shared with Everyone"
